@using LetterAmazer.Websites.Client.Extensions
@model LetterAmazer.Websites.Client.ViewModels.AccountViewModel

@section header {
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}



<div class="row">
    <div class="col-md-6">

        <h1>Register</h1>
        <p>
            Accounts are for both companies and private. By creating a <b>free account</b>, you are able to:
            <br />
            <ul>
                <li>Send letters much faster</li>
                <li>Insert credits on your account, so you don't have to pay every time you send a letter</li>
                <li>Get an overview of all your invoices</li>
                <li>See and download all letters you have sent previously
                </li>
            </ul>
        </p>

        <h2>Fill out your information</h2>
        @using (Html.BeginForm("Register","Home",FormMethod.Post))
        {
            @Html.BusinessErrorMessageBox()

            <div class="row login">
                <div class="col-lg-6">
                    <label class="sr-only" for="Email">Email<span class="input-required">*</span></label>
                    @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Email)
                </div>
            </div>
            <div class="row login">
                <div class="col-lg-6">
                    <label class="sr-only" for="Password">Password<span class="input-required">*</span></label>
                    @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.RegisterViewModel.Password)
                </div>
            </div>
            <div class="row login">
                <div class="col-lg-6">
                    <label class="sr-only" for="Password">Your country<span class="input-required">*</span></label>
                    @Html.DropDownListFor(model => model.RegisterViewModel.SelectedCountry, Model.RegisterViewModel.Countries, new { @class = "form-control" })
                </div>
            </div>
            
            <input type="submit" class="btn btn-primary btn-lg" value="Create your account now" />
        }

        <br />
        <p>Do you already have an account? <a href="@Url.Action("Login")">You can log in here</a>.</p>

    </div>


    <div class="col-md-6 border-left">


        <h1>Log in</h1>
        <p>Please log in with your e-mail or password.<br />
            <br />
            If you don't have an account, you @Html.ActionLink("can create a free account", "Register"). If you cannot remember your password, @Html.ActionLink("you can recover it", "ForgotPassword").</p>

        @using (Html.BeginForm("Login","Home",FormMethod.Post))
        {
            @Html.BusinessErrorMessageBox()
            <div class="row login">
                <div class="col-lg-6">
                    <label class="sr-only" for="Email">Email</label>
                    @Html.TextBoxFor(m => m.LoginViewModel.Email, new { @class = "form-control", placeholder = "E-mail" })
                    @Html.ValidationMessageFor(m => m.LoginViewModel.Email)
                </div>
            </div>
            <div class="row login">
                <div class="col-lg-6">
                    <label class="sr-only" for="Password">Password</label>
                    @Html.PasswordFor(m => m.LoginViewModel.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.LoginViewModel.Email)
                </div>
            </div>
            <div class="row login">
                <div class="col-lg-12">
                    <input type="submit" class="btn btn-primary btn-lg" value="Log in" />
                </div>
            </div>
            <div class="row login">
                <div class="col-lg-12">
                    <a href="@Url.Action("ForgotPassword")">Forgot password?</a>
                </div>
            </div>
        }

    </div>

</div>
