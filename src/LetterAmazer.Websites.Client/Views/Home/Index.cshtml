@using LetterAmazer.Business.Services.Resources
@model dynamic

<div class="jumbotron-white">
    <div class="container">
        <div class="text-center promotionMargin">
            <img src="/Content/images/letteramazer.png" />
            <div>
                <p class="frontpageLead">
                    @Html.Raw(Strings.SendLettersWorldWideAutomatically)
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "SingleLetter")" style="font-size: 25px; padding: 0 30px; line-height: 2.33;">@Strings.SendLetterNow &raquo;</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron-lightblue">
    <div class="container">
        <div class="promotionMargin">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    @Html.Raw(Strings.HomepageHint)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container frontpage-bottom-usp">
    <div class="row">
        <div class="col-lg-4">
            <h2>@Strings.SendSingleALetter</h2>
            @Html.Raw(Strings.SendSingleALetterContent)
            <p><a class="btn btn-default" href="@Url.Action("Index", "SingleLetter")">@Strings.ViewDetails &raquo;</a></p>
        </div>
        <div class="col-lg-4">
            <h2>@Strings.ForBusiness</h2>
            @Html.Raw(Strings.ForBusinessContent)
            <p><a class="btn btn-default" href="@Url.Action("Business", "Home")">@Strings.ViewDetails &raquo;</a></p>
        </div>
        <div class="col-lg-4">
            <h2>@Strings.Pricing</h2>
            @Html.Raw(Strings.PricingHomepageContent)
            <p><a class="btn btn-default" href="@Url.Action("Pricing", "Home")">@Strings.ViewDetails &raquo;</a></p>
        </div>
    </div>
</div>

<hr />

<div class="container frontpage-bottom-usp frontpageBottomText">
    <div class="row">
        <div class="col-lg-8">
            @Html.Raw(Strings.HomepageContent)
        </div>
        <div class="col-lg-4" id="newsletterStuff">
            @Html.Partial("NewsletterForm")
        </div>
    </div>
</div>
