@using LetterAmazer.Websites.Client.Resources.Views.Home
@using LetterAmazer.Websites.Client.Extensions

@model LetterAmazer.Websites.Client.ViewModels.LoginViewModel

@section header {
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}

<h1>Forgot password</h1>
<p>If you have forgotten your password, you can reset it here.</p>
<p>
    <b>The steps is as follows</b>:<br />
    <ol>
        <li>Enter your e-mail below</li>
        <li>Click "Reset your password"</li>
        <li>Click the link in the e-mail we send</li>
        <li>Select a new password</li>
    </ol>
</p>

<h3>Enter your e-mail below to reset your password</h3>
<div style="max-width:300px">
    @using (Html.BeginForm())
    {
        @Html.BusinessErrorMessageBox()
        <div class="row login">
            <div class="col-lg-6">

                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your e-mail" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <br />
        <div class="row login">
            <div class="col-lg-12">
                <input type="submit" class="btn btn-primary btn-lg" value="Reset your password" />
            </div>
        </div>
    }
</div>
