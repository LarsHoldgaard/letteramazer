<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">


    @Styles.Render("~/Content/css")

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <img src="Content/images/letteramazer_small_white.png" height="25px;" class="navbar-left" /></a>
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li>@Html.ActionLink("Send a letter","Index","SingleLetter")</li>
                    <li>@Html.ActionLink("Business","Business","Home")</li>
                    <li>@Html.ActionLink("Api","Api","Home")</li>
                    <li>@Html.ActionLink("Pricing","Pricing","Home")</li>

                </ul>

            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>



    @RenderBody()

    <div class="container">

        <hr>

        <footer class="footer">

            <a href="/">
                <img src="Content/images/letteramazer_small.png" height="25px;" class="navbar-left" /></a>
            <ul>

                <li>@Html.ActionLink("About","About","Home")</li>
                <li>@Html.ActionLink("Contact","Contact","Home")</li>
            </ul>

        </footer>
    </div>


</body>
</html>
